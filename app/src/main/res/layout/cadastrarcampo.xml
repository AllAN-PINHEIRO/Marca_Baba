<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edtRua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rua"/>

    <EditText
        android:id="@+id/edtBairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bairro"/>

    <EditText
        android:id="@+id/edtCidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cidade"/>

    <EditText
        android:id="@+id/edtCep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CEP"
        android:inputType="number"/>

    <!-- ImageView para exibir a imagem selecionada -->
    <ImageView
        android:id="@+id/imgViewCampo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_image_placeholder"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"/>

    <!-- Botão para abrir a galeria -->
    <Button
        android:id="@+id/btnAdicionarImagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Imagem"/>

    <!-- Botão para salvar o campo -->
    <Button
        android:id="@+id/btnSalvarCampo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar Campo"
        android:layout_marginTop="16dp"/>
</LinearLayout>
