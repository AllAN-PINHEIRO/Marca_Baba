<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Nome do Time -->
    <EditText
        android:id="@+id/edtNomeTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Time" />

    <!-- Nome do Jogador -->
    <EditText
        android:id="@+id/edtNomeJogador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Jogador" />

    <!-- Selecionar Posição do Jogador -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posição:"
        android:paddingTop="8dp"/>

    <Spinner
        android:id="@+id/spinnerPosicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Botão para adicionar jogador -->
    <Button
        android:id="@+id/btnAdicionarJogador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Jogador" />

    <!-- Lista de Jogadores -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogadores:"
        android:paddingTop="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:id="@+id/listaJogadoresLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- Botão para salvar time -->
    <Button
        android:id="@+id/btnSalvarTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar Time" />
</LinearLayout>