<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Botão para Cadastro de Time -->
    <Button
        android:id="@+id/btnCadastrarTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Time"
        android:layout_marginTop="16dp" />

    <!-- Botão para Cadastro de Campo -->
    <Button
        android:id="@+id/btnCadastrarCampo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Campo"
        android:layout_marginTop="16dp" />

    <!-- Botão para Cadastro de Jogador -->
    <Button
        android:id="@+id/btnCadastrarJogador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Jogador"
        android:layout_marginTop="16dp" />
</LinearLayout>
